<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BadgeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#cc333333</item>
        <item name="btnBadgeHeight">14dp</item>
        <item name="btnBadgeColor">@color/colorAccent</item>
    </style>
    <style name="BadgeButton.Normal">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/badge</item>
        <item name="btnBadgeVisible">true</item>
    </style>
    <style name="BadgeButton.GridItem">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/badge_grid</item>
        <item name="layout_columnWeight">1</item>
        <item name="btnBadgeVisible">false</item>
    </style>
    <style name="BadgeButton.TabItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <!--<item name="android:background">@drawable/badge_grid</item>-->
        <item name="android:textColor">@color/tab</item>
        <item name="btnBadgeVisible">false</item>
    </style>
</resources>
